{
  "name": "@ycore/foundry",
  "version": "2.0.4",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ycore/foundry.git"
  },
  "exports": {
    "./auth": {
      "types": "./src/auth/index.ts",
      "import": "./src/auth/index.ts"
    },
    "./auth/services": {
      "types": "./src/auth/services/index.ts",
      "import": "./src/auth/services/index.ts"
    },
    "./auth/schema": {
      "types": "./src/auth/schema/index.ts",
      "import": "./src/auth/schema/index.ts",
      "require": "./src/auth/schema/index.ts"
    },
    "./email": {
      "types": "./src/email/index.ts",
      "import": "./src/email/index.ts"
    },
    "./secure": {
      "types": "./src/secure/index.ts",
      "import": "./src/secure/index.ts"
    },
    "./secure/services": {
      "types": "./src/secure/services/index.ts",
      "import": "./src/secure/services/index.ts"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@oslojs/otp": "^1.1.0",
    "@oslojs/webauthn": "^1.0.0",
    "jose": "^6.1.0",
    "remix-auth": "^4.2.0"
  },
  "devDependencies": {
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/react": "^19.1.13",
    "vite": "^7.1.6"
  },
  "scripts": {
    "clean": "rm -rf dist node_modules",
    "ws:format": "biome format src",
    "ws:lint": "biome lint src",
    "ws:tc": "tsc --noEmit",
    "ws:types": "wrangler types --include-env=false './src/@types/worker-runtime.d.ts' && bun run ws:tc"
  }
}
