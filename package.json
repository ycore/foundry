{
  "name": "@ycore/foundry",
  "version": "2.3.2",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ycore/foundry.git"
  },
  "exports": {
    "./auth": {
      "types": "./dist/auth/index.d.ts",
      "import": "./dist/auth/index.js"
    },
    "./auth/server": {
      "types": "./dist/auth/server/index.d.ts",
      "import": "./dist/auth/server/index.js"
    },
    "./auth/schema": {
      "types": "./dist/auth/schema/index.d.ts",
      "import": "./dist/auth/schema/index.js",
      "require": "./dist/auth/schema/index.js"
    },
    "./email": {
      "types": "./dist/email/index.d.ts",
      "import": "./dist/email/index.js"
    },
    "./secure": {
      "types": "./dist/secure/index.d.ts",
      "import": "./dist/secure/index.js"
    },
    "./secure/server": {
      "types": "./dist/secure/server/index.d.ts",
      "import": "./dist/secure/server/index.js"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@oslojs/otp": "^1.1.0",
    "@oslojs/webauthn": "^1.0.0",
    "jose": "^6.1.0",
    "remix-auth": "^4.2.0"
  },
  "peerDependencies": {
    "@ycore/componentry": ">= 2.3.0 < 3",
    "@ycore/forge": ">= 2.3.0 < 3"
  },
  "devDependencies": {
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/react": "^19.1.13",
    "vite": "^7.1.6"
  },
  "scripts": {
    "clean": "rm -rf dist node_modules",
    "ws:format": "biome format src",
    "ws:lint": "biome lint src",
    "ws:tc": "tsc --noEmit",
    "ws:types": "wrangler types --include-env=false './src/@types/worker-runtime.d.ts' && bun run ws:tc"
  }
}
